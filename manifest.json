{
  "name": "Switch&Delete : Switch & delete tabs quickly",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Quickly delete unwanted tabs by easily selecting and deleting them",
  "homepage_url": "http://google.com",
  "icons": {
    "16": "icons/logo16.png",
    "48": "icons/logo48.png",
    "128": "icons/logo128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icons/logo16.png",
    "default_title": "Switch&DeleteSwitch&Delete",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "commands": {
          
          "_execute_browser_action": {
            "suggested_key": {
              "windows": "Alt+Shift+O",
              "mac": "Command+Shift+O",
              "chromeos": "Alt+Shift+O",
              "linux": "Alt+Shift+O"
            }
          }
          
        },
  "permissions": [
    "tabs"
  ]
}